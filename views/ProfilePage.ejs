<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./components/Heading') %>
    <title>Blog | Profile</title>
  </head>
  <body>
    <%- include('./components/NavBar') %>
    <div
      class="flex flex-col px-[5%] py-[50px] w-[100%] bg-primary-light dark:bg-text-light"
    >
      <div class="flex flex-row">
        <img
          src="<%= user.photoURL %>"
          class="w-[25%] h-[300px] object-cover"
        />
        <div class="flex flex-col">
          <h2
            class="text-md font-semibold text-text-main dark:text-primary-light"
          >
            <%= user.name %>
          </h2>
          <% if(user.isCreater){ %>
          <h3  class="text-xs font-semibold text-secondary-main dark:text-secondary-main">Blog Writer</h3>
         <a href="https://admin.storyscape.prajwolneupane.com.np/add" target="_blank"><button>Write Blog</button></a>
          <% } else { %> 
            <h3   class="text-xs font-semibold text-secondary-main dark:text-secondary-main">Blog Viewer</h3>
            <% } %>
        </div>
      </div>
    </div>

    <button onclick="logOut()">Log Out</button>
  </body>
</html>
